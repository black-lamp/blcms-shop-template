{
    "name": "black-lamp/blcms-shop-template",
    "description": "BLCMS Shop Template",
    "keywords": ["yii2", "framework", "project template", "blcms", "shop"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/black-lamp/blcms-shop-template/issues?state=open",
        "source": "https://github.com/black-lamp/blcms-shop-template"
    },
    "minimum-stability": "stable",
    "repositories": [
      {
        "type": "composer",
        "url": "https://asset-packagist.org"
      }
    ],
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0.6",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "yiisoft/yii2-jui": "~2.0.0",

        "black-lamp/yii2-articles": "0.6.*",
        "black-lamp/yii2-locale": "0.*",
        "black-lamp/blcms-languages": "0.*",
        "black-lamp/blcms-rbac": "0.*",
        "black-lamp/blcms-redirect": "0.*",
        "black-lamp/blcms-staticpage": "0.*",
        "black-lamp/blcms-shop": "0.2.*",
        "black-lamp/blcms-cart": "0.1.0",
        "black-lamp/blcms-nova-poshta" : "0.*",
        "black-lamp/blcms-payment": "0.*",
        "black-lamp/blcms-gallery": "0.*",

        "dektrium/yii2-user": "0.9.*",
        "uran1980/yii2-translate-panel": "0.1.25",
        "nirvana-msu/yii2-helpers": "1.0.*@dev"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "marqu3s/yii2-summernote": "dev-master",

        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Development --overwrite=n"
    }
}
